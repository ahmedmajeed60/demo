        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="202310260840" author="Ahmed Majeed">
        <createTable tableName="Customer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="customer_id_pk"/>
            </column>
            <column name="first_name" type="varchar(20)">
                <constraints nullable="false" uniqueConstraintName="customer_firstName_notNullable"/>
            </column>
            <column name="last_name" type="varchar(20)">
                <constraints nullable="false" uniqueConstraintName="customer_lastName_notNullable"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints unique="true" nullable="false" uniqueConstraintName="customer_email_notNullable_unique"/>
            </column>
            <column name="customer_id" type="varchar(250)">
                <constraints unique="true" nullable="false"
                             uniqueConstraintName="customer_customerId_notNullable_unique"/>
            </column>
            <column name="password" type="varchar(250)">
                <constraints unique="true" nullable="false"
                             uniqueConstraintName="customer_password_notNullable_unique"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints unique="false" nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="Role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="role_id_pk"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints unique="true" nullable="false" uniqueConstraintName="role_name_notNullable_unique"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="Customer" baseColumnNames="role_id" constraintName="customer_role_fk"
                                 referencedTableName="Role"
                                 referencedColumnNames="id"/>
        <insert tableName="Role">
            <column name="id" value="1"/>
            <column name="name" value="ADMIN"/>
